<UserControl x:Class="MobileSamples.Controls.Modal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MobileSamples.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="2*" MaxHeight="50"/>
            </Grid.RowDefinitions>
            <StackPanel Name="ModalControl">
                
            </StackPanel>
            <Button Name="SubmitBtn" HorizontalAlignment="Right" Grid.Row="1" Content="Ok" Margin="5" Padding="10" Click="OnSubmitClick"/>
        </Grid>  
    </ScrollViewer>
</UserControl>
